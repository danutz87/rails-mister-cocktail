<div class="show-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">
        <h1><%= @cocktail.name %></h1>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">
        <h3>Ingredients:</h3>
      </div>
      <ul class="ingredient-list" class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">
        <% @cocktail.doses.each do |dose| %>
          <li> <i class="fas fa-glass-martini"></i> <span style="color: #E91E63"><%= dose.ingredient.name %></span> (<%= dose.description %>) | <%= link_to 'ðŸ—‘', dose_path(dose), method: :delete %></li>
        <% end %>
      </ul>

        <%= render 'doses/form' %>
      </div>

      <div class="cocktail-photo">
        <%= link_to cl_image_tag(@cocktail.photo, height: 300, width: 400, crop: :fill, :radius=>10), cocktail_path(@cocktail) %>
      </div>
  </div>
</div>

